#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# Wait for database to be ready (for production with PostgreSQL)
if [ "${RAILS_ENV}" == "production" ] && [ -n "${DATABASE_HOST}" ]; then
  echo "Waiting for database to be ready..."
  # Install postgresql-client if not available
  if ! command -v pg_isready >/dev/null 2>&1; then
    echo "pg_isready not found, skipping database readiness check"
  else
    until pg_isready -h "${DATABASE_HOST}" -p "${DATABASE_PORT:-5432}" -U "${DATABASE_USER:-postgres}" 2>/dev/null; do
      echo "Database is unavailable - sleeping"
      sleep 2
    done
    echo "Database is ready!"
  fi
fi

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  echo "Preparing database..."
  ./bin/rails db:prepare || {
    echo "Database preparation failed!"
    exit 1
  }
  echo "Database ready!"
fi

exec "${@}"
