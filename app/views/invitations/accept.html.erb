<!DOCTYPE html>
<html>
<head>
  <title>Accept Invitation - LuxeThreads</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }
    .invitation-card {
      background: white;
      border-radius: 12px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.2);
      max-width: 600px;
      width: 100%;
      padding: 40px;
    }
    .invitation-header {
      text-align: center;
      margin-bottom: 30px;
    }
    .invitation-header h1 {
      color: #667eea;
      font-weight: bold;
      margin-bottom: 10px;
    }
    .invitation-header p {
      color: #666;
    }
    .form-label {
      font-weight: 600;
      color: #333;
      margin-bottom: 8px;
    }
    .btn-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border: none;
      padding: 12px 30px;
      font-weight: 600;
    }
    .btn-primary:hover {
      opacity: 0.9;
      transform: translateY(-1px);
    }
    .alert {
      border-radius: 8px;
    }
    .info-box {
      background-color: #f8f9fa;
      border-left: 4px solid #667eea;
      padding: 15px;
      border-radius: 4px;
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
  <div class="invitation-card">
    <div class="invitation-header">
      <h1><i class="fas fa-user-plus me-2"></i>Complete Your Registration</h1>
      <p>Welcome to LuxeThreads! Please fill in your details to complete your account setup.</p>
    </div>

    <% if @errors.present? %>
      <div class="alert alert-danger">
        <h5><i class="fas fa-exclamation-triangle me-2"></i>Please fix the following errors:</h5>
        <ul class="mb-0">
          <% @errors.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="info-box">
      <strong><i class="fas fa-info-circle me-2"></i>Account Information:</strong><br>
      <strong>Email:</strong> <%= @invitee.email %><br>
      <% if @invitee.is_a?(Admin) %>
        <strong>Role:</strong> <%= @invitee.role.humanize %>
      <% else %>
        <% if @is_child_supplier && @supplier_profile %>
          <strong>Type:</strong> <span class="badge bg-info">Child Supplier</span><br>
          <strong>Joining:</strong> <%= @supplier_profile.company_name || @supplier_profile.owner&.email %><br>
          <strong>Account Role:</strong> <%= @supplier_account_user&.role&.humanize || 'Staff' %><br>
          <small class="text-success"><i class="fas fa-check-circle me-1"></i>You will be activated immediately after registration</small>
        <% else %>
          <strong>Type:</strong> <span class="badge bg-primary">Parent Supplier</span><br>
          <strong>Role:</strong> <%= @invitee.invitation_role&.humanize || 'Supplier' %><br>
          <small class="text-warning"><i class="fas fa-clock me-1"></i>Your account will require admin approval after registration</small>
        <% end %>
      <% end %>
    </div>

    <%= form_with url: (@invitation_type == 'admin' ? admin_invitation_accept_path : supplier_invitation_accept_path), local: true, method: :post do |form| %>
      <%= hidden_field_tag :token, @token %>

      <div class="row">
        <div class="col-md-6">
          <div class="mb-3">
            <%= form.label :first_name, "First Name", class: "form-label" %>
            <%= form.text_field "invitation[first_name]", class: "form-control #{'is-invalid' if @errors&.any? { |e| e.downcase.include?('first name') }}", required: true, placeholder: "John", value: @form_params&.dig(:first_name) %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <%= form.label :last_name, "Last Name", class: "form-label" %>
            <%= form.text_field "invitation[last_name]", class: "form-control #{'is-invalid' if @errors&.any? { |e| e.downcase.include?('last name') } }}", required: true, placeholder: "Doe", value: @form_params&.dig(:last_name) %>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <%= form.label :phone_number, "Phone Number", class: "form-label" %>
        <%= form.text_field "invitation[phone_number]", class: "form-control #{'is-invalid' if @errors&.any? { |e| e.downcase.include?('phone') }}", required: true, placeholder: "+1234567890", value: @form_params&.dig(:phone_number) %>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="mb-3">
            <%= form.label :password, "Password", class: "form-label" %>
            <div class="input-group">
              <%= form.password_field "invitation[password]", id: "password-field", class: "form-control #{'is-invalid' if @errors&.any? { |e| e.downcase.include?('password') && !e.downcase.include?('confirmation') }}", required: true, placeholder: "Minimum 8 characters", value: @form_params&.dig(:password) %>
              <button type="button" class="btn btn-outline-secondary" id="toggle-password" onclick="togglePassword('password-field', 'toggle-password')">
                <i class="fas fa-eye" id="password-eye-icon"></i>
              </button>
            </div>
            <small class="form-text text-muted">Must be at least 8 characters long</small>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <%= form.label :password_confirmation, "Confirm Password", class: "form-label" %>
            <div class="input-group">
              <%= form.password_field "invitation[password_confirmation]", id: "password-confirmation-field", class: "form-control #{'is-invalid' if @errors&.any? { |e| e.downcase.include?('password') && (e.downcase.include?('confirmation') || e.downcase.include?('match')) }}", required: true, placeholder: "Re-enter password", value: @form_params&.dig(:password_confirmation) %>
              <button type="button" class="btn btn-outline-secondary" id="toggle-password-confirmation" onclick="togglePassword('password-confirmation-field', 'toggle-password-confirmation')">
                <i class="fas fa-eye" id="password-confirmation-eye-icon"></i>
              </button>
            </div>
            <% if @errors&.any? { |e| e.downcase.include?('password') && (e.downcase.include?('confirmation') || e.downcase.include?('match')) } %>
              <div class="invalid-feedback d-block">
                Password confirmation doesn't match password
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <% if @invitation_type == 'supplier' && !@is_child_supplier %>
        <hr class="my-4">
        <h5 class="mb-3"><i class="fas fa-building me-2"></i>Supplier Profile</h5>
        <p class="text-muted small">Please provide your supplier profile information. This will be reviewed by admin before your account is fully activated.</p>
        
        <% 
          supplier_params = @form_params&.dig(:supplier_profile_attributes) || {}
          supplier_profile = @invitee.build_supplier_profile
          if supplier_params.present?
            supplier_profile.assign_attributes(supplier_params)
          end
        %>
        <%= form.fields_for "invitation[supplier_profile_attributes]", supplier_profile do |profile_form| %>
          <div class="mb-3">
            <%= profile_form.label :company_name, "Company Name", class: "form-label" %>
            <%= profile_form.text_field :company_name, class: "form-control", placeholder: "Your Company Name" %>
          </div>
          
          <div class="mb-3">
            <%= profile_form.label :gst_number, "GST Number", class: "form-label" %>
            <%= profile_form.text_field :gst_number, class: "form-control", placeholder: "GST Number (if applicable)" %>
          </div>
          
          <div class="mb-3">
            <%= profile_form.label :description, "Business Description", class: "form-label" %>
            <%= profile_form.text_area :description, rows: 3, class: "form-control", placeholder: "Tell us about your business" %>
          </div>
          
          <div class="mb-3">
            <%= profile_form.label :website_url, "Website URL", class: "form-label" %>
            <%= profile_form.text_field :website_url, class: "form-control", placeholder: "https://www.yourcompany.com" %>
          </div>
        <% end %>
      <% elsif @invitation_type == 'supplier' && @is_child_supplier %>
        <div class="alert alert-info mt-3">
          <i class="fas fa-info-circle me-2"></i>
          <strong>You're joining an existing supplier account.</strong> You'll have access based on your assigned role and permissions.
        </div>
      <% end %>

      <div class="d-grid gap-2 mt-4">
        <%= form.submit "Complete Registration", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <p class="text-muted small">
        <i class="fas fa-shield-alt me-1"></i>
        Your information is secure and encrypted.
      </p>
    </div>
  </div>

  <script>
    function togglePassword(fieldId, buttonId) {
      const field = document.getElementById(fieldId);
      const button = document.getElementById(buttonId);
      const icon = button.querySelector('i');
      
      if (field.type === 'password') {
        field.type = 'text';
        icon.classList.remove('fa-eye');
        icon.classList.add('fa-eye-slash');
      } else {
        field.type = 'password';
        icon.classList.remove('fa-eye-slash');
        icon.classList.add('fa-eye');
      }
    }
  </script>
</body>
</html>

