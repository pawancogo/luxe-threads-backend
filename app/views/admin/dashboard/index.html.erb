<% content_for :title, "Dashboard" %>

<% 
  # Ensure @stats is always a hash with safe defaults
  @stats ||= {}
  @stats = @stats.presence || {}
%>

<div class="admin-card">
  <h1 class="card-title mb-4">
    <i class="fas fa-tachometer-alt me-2"></i>Dashboard Overview
  </h1>
  
  <!-- Statistics Cards -->
  <div class="row g-4 mb-4">
    <div class="col-md-3">
      <div class="card border-primary">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h6 class="text-muted mb-1">Total Users</h6>
              <h3 class="mb-0"><%= @stats[:total_users] || 0 %></h3>
            </div>
            <div class="text-primary" style="font-size: 2rem;">
              <i class="fas fa-users"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card border-success">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h6 class="text-muted mb-1">Total Suppliers</h6>
              <h3 class="mb-0"><%= @stats[:total_suppliers] || 0 %></h3>
            </div>
            <div class="text-success" style="font-size: 2rem;">
              <i class="fas fa-store"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card border-info">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h6 class="text-muted mb-1">Total Products</h6>
              <h3 class="mb-0"><%= @stats[:total_products] || 0 %></h3>
            </div>
            <div class="text-info" style="font-size: 2rem;">
              <i class="fas fa-box"></i>
            </div>
          </div>
          <small class="text-muted">
            <span class="badge bg-warning"><%= @stats[:pending_products] || 0 %> Pending</span>
            <span class="badge bg-success"><%= @stats[:active_products] || 0 %> Active</span>
          </small>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card border-warning">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h6 class="text-muted mb-1">Total Orders</h6>
              <h3 class="mb-0"><%= @stats[:total_orders] || 0 %></h3>
            </div>
            <div class="text-warning" style="font-size: 2rem;">
              <i class="fas fa-shopping-cart"></i>
            </div>
          </div>
          <small class="text-muted">
            <span class="badge bg-warning"><%= @stats[:pending_orders] || 0 %> Pending</span>
            <span class="badge bg-info"><%= @stats[:shipped_orders] || 0 %> Shipped</span>
          </small>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Additional Stats Row -->
  <div class="row g-4 mb-4">
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h6 class="text-muted mb-1">Featured Products</h6>
          <h4 class="mb-0"><%= @stats[:featured_products] || 0 %></h4>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h6 class="text-muted mb-1">Low Stock Variants</h6>
          <h4 class="mb-0 text-warning"><%= @stats[:low_stock_variants] || 0 %></h4>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h6 class="text-muted mb-1">Out of Stock</h6>
          <h4 class="mb-0 text-danger"><%= @stats[:out_of_stock_variants] || 0 %></h4>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h6 class="text-muted mb-1">Categories</h6>
          <h4 class="mb-0"><%= @stats[:categories_count] || 0 %></h4>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Quick Actions -->
  <div class="admin-card mb-4">
    <h5 class="card-title mb-3">Quick Actions</h5>
    <div class="d-flex flex-wrap gap-2">
      <%= link_to admin_products_path(status: 'pending'), class: "btn btn-warning" do %>
        <i class="fas fa-check-circle me-2"></i>Review Pending Products (<%= @stats[:pending_products] || 0 %>)
      <% end %>
      <%= link_to admin_orders_path(status: 'pending'), class: "btn btn-info" do %>
        <i class="fas fa-shopping-cart me-2"></i>Process Pending Orders (<%= @stats[:pending_orders] || 0 %>)
      <% end %>
      <%= link_to admin_users_path, class: "btn btn-primary" do %>
        <i class="fas fa-users me-2"></i>Manage Users
      <% end %>
      <%= link_to admin_suppliers_path, class: "btn btn-success" do %>
        <i class="fas fa-store me-2"></i>Manage Suppliers
      <% end %>
    </div>
  </div>
  
  <!-- Recent Orders and Products -->
  <div class="row g-4 mb-4">
    <div class="col-md-6">
      <div class="admin-card">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h5 class="card-title mb-0">
            <i class="fas fa-shopping-cart me-2"></i>Recent Orders
          </h5>
          <% if (@stats[:recent_orders] || []).any? %>
            <%= link_to "View All Orders", admin_orders_path, class: "btn btn-sm btn-outline-primary" %>
          <% end %>
        </div>
        <% if (@stats[:recent_orders] || []).any? %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Order #</th>
                  <th>Customer</th>
                  <th>Amount</th>
                  <th>Status</th>
                  <th>Date</th>
                </tr>
              </thead>
              <tbody>
                <% (@stats[:recent_orders] || []).each do |order| %>
                  <tr>
                    <td>
                      <strong><%= link_to order.order_number, admin_order_path(order), class: "text-decoration-none" %></strong>
                    </td>
                    <td>
                      <%= order.user&.email || 'N/A' %><br>
                      <small class="text-muted"><%= order.user&.full_name %></small>
                    </td>
                    <td>â‚¹<%= number_with_delimiter(order.total_amount) %></td>
                    <td>
                      <span class="badge bg-<%= case order.status
                        when 'pending' then 'warning'
                        when 'paid', 'shipped' then 'info'
                        when 'delivered' then 'success'
                        when 'cancelled' then 'danger'
                        else 'secondary'
                        end %>">
                        <%= order.status %>
                      </span>
                    </td>
                    <td><%= order.created_at.strftime('%b %d, %Y') %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center text-muted py-4">
            <i class="fas fa-shopping-cart fa-3x mb-3 d-block"></i>
            <p>No orders available</p>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="admin-card">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h5 class="card-title mb-0">
            <i class="fas fa-box me-2"></i>Recent Products
          </h5>
          <% if (@stats[:recent_products] || []).any? %>
            <%= link_to "View All Products", admin_products_path, class: "btn btn-sm btn-outline-primary" %>
          <% end %>
        </div>
        <% if (@stats[:recent_products] || []).any? %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Supplier</th>
                  <th>Status</th>
                  <th>Date</th>
                </tr>
              </thead>
              <tbody>
                <% (@stats[:recent_products] || []).each do |product| %>
                  <tr>
                    <td><%= link_to product.name, admin_product_path(product), class: "text-decoration-none" %></td>
                    <td><%= product.supplier_profile&.company_name || 'N/A' %></td>
                    <td>
                      <span class="badge bg-<%= product.status == 'active' ? 'success' : 'warning' %>">
                        <%= product.status %>
                      </span>
                    </td>
                    <td><%= product.created_at.strftime('%b %d, %Y') %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center text-muted py-4">
            <i class="fas fa-box fa-3x mb-3 d-block"></i>
            <p>No products available</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
