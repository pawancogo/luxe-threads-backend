<% content_for :title, "Products Report" %>

<div class="admin-card">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="card-title mb-0">
      <i class="fas fa-box me-2"></i>Products Report
    </h1>
    <div>
      <%= link_to "Export CSV", admin_reports_export_path(report_type: 'products', start_date: params[:start_date], end_date: params[:end_date]), 
          class: "btn btn-sm btn-outline-success" %>
      <%= link_to "Back to Reports", admin_reports_path, class: "btn btn-sm btn-outline-secondary" %>
    </div>
  </div>
  
  <% if @report_data.present? %>
    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
      <div class="col-md-3">
        <div class="card border-primary">
          <div class="card-body">
            <h6 class="text-muted mb-1">Total Products</h6>
            <h3 class="mb-0 text-primary"><%= @report_data[:summary][:total_products] || 0 %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card border-success">
          <div class="card-body">
            <h6 class="text-muted mb-1">Active Products</h6>
            <h3 class="mb-0 text-success"><%= @report_data[:summary][:active_products] || 0 %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card border-warning">
          <div class="card-body">
            <h6 class="text-muted mb-1">Pending Products</h6>
            <h3 class="mb-0 text-warning"><%= @report_data[:summary][:pending_products] || 0 %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card border-info">
          <div class="card-body">
            <h6 class="text-muted mb-1">Featured Products</h6>
            <h3 class="mb-0 text-info"><%= @report_data[:summary][:featured_products] || 0 %></h3>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Products by Status -->
    <% if @report_data[:products_by_status].present? %>
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">Products by Status</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Status</th>
                  <th>Count</th>
                  <th>Percentage</th>
                </tr>
              </thead>
              <tbody>
                <% @report_data[:products_by_status].each do |stat| %>
                  <tr>
                    <td><%= stat[:status] %></td>
                    <td><%= stat[:count] %></td>
                    <td><%= stat[:percentage] %>%</td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>
    
    <!-- Top Products -->
    <% if @report_data[:top_products].present? %>
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Top Products by Revenue</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-sm table-hover">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Revenue</th>
                  <th>Quantity Sold</th>
                  <th>Orders</th>
                </tr>
              </thead>
              <tbody>
                <% @report_data[:top_products].each do |product| %>
                  <tr>
                    <td><%= product[:product_name] %></td>
                    <td>â‚¹<%= number_with_delimiter(product[:revenue]) %></td>
                    <td><%= product[:quantity_sold] %></td>
                    <td><%= product[:orders_count] %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="alert alert-info">
      <i class="fas fa-info-circle me-2"></i>
      No products data available for the selected date range.
    </div>
  <% end %>
</div>

