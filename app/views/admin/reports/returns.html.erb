<% content_for :title, "Returns Report" %>

<div class="admin-card">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="card-title mb-0">
      <i class="fas fa-undo me-2"></i>Returns Report
    </h1>
    <div>
      <%= link_to "Export CSV", admin_reports_export_path(report_type: 'returns', start_date: params[:start_date], end_date: params[:end_date]), 
          class: "btn btn-sm btn-outline-success" %>
      <%= link_to "Back to Reports", admin_reports_path, class: "btn btn-sm btn-outline-secondary" %>
    </div>
  </div>
  
  <% if @report_data.present? %>
    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
      <div class="col-md-3">
        <div class="card border-primary">
          <div class="card-body">
            <h6 class="text-muted mb-1">Total Returns</h6>
            <h3 class="mb-0 text-primary"><%= @report_data[:summary][:total_returns] || 0 %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card border-success">
          <div class="card-body">
            <h6 class="text-muted mb-1">Approved Returns</h6>
            <h3 class="mb-0 text-success"><%= @report_data[:summary][:approved_returns] || 0 %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card border-danger">
          <div class="card-body">
            <h6 class="text-muted mb-1">Rejected Returns</h6>
            <h3 class="mb-0 text-danger"><%= @report_data[:summary][:rejected_returns] || 0 %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card border-info">
          <div class="card-body">
            <h6 class="text-muted mb-1">Total Refund</h6>
            <h3 class="mb-0 text-info">â‚¹<%= number_with_delimiter(@report_data[:summary][:total_refund_amount] || 0) %></h3>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Returns by Status -->
    <% if @report_data[:returns_by_status].present? %>
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">Returns by Status</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Status</th>
                  <th>Count</th>
                  <th>Percentage</th>
                </tr>
              </thead>
              <tbody>
                <% @report_data[:returns_by_status].each do |stat| %>
                  <tr>
                    <td><%= stat[:status] %></td>
                    <td><%= stat[:count] %></td>
                    <td><%= stat[:percentage] %>%</td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>
    
    <!-- Daily Returns -->
    <% if @report_data[:daily_returns].present? %>
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Daily Returns</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-sm table-hover">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Returns Count</th>
                </tr>
              </thead>
              <tbody>
                <% @report_data[:daily_returns].each do |stat| %>
                  <tr>
                    <td><%= Date.parse(stat[:date]).strftime('%b %d, %Y') %></td>
                    <td><%= stat[:count] %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="alert alert-info">
      <i class="fas fa-info-circle me-2"></i>
      No returns data available for the selected date range.
    </div>
  <% end %>
</div>

