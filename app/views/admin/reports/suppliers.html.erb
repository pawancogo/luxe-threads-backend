<% content_for :title, "Suppliers Report" %>

<div class="admin-card">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="card-title mb-0">
      <i class="fas fa-store me-2"></i>Suppliers Report
    </h1>
    <div>
      <%= link_to "Back to Reports", admin_reports_path, class: "btn btn-sm btn-outline-secondary" %>
    </div>
  </div>
  
  <% if @report_data.present? %>
    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
      <div class="col-md-4">
        <div class="card border-primary">
          <div class="card-body">
            <h6 class="text-muted mb-1">Total Suppliers</h6>
            <h3 class="mb-0 text-primary"><%= @report_data[:summary][:total_suppliers] || 0 %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card border-success">
          <div class="card-body">
            <h6 class="text-muted mb-1">Verified Suppliers</h6>
            <h3 class="mb-0 text-success"><%= @report_data[:summary][:verified_suppliers] || 0 %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card border-info">
          <div class="card-body">
            <h6 class="text-muted mb-1">Active Suppliers</h6>
            <h3 class="mb-0 text-info"><%= @report_data[:summary][:active_suppliers] || 0 %></h3>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Suppliers Performance -->
    <% if @report_data[:suppliers_performance].present? %>
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Top Suppliers by Performance</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-sm table-hover">
              <thead>
                <tr>
                  <th>Supplier</th>
                  <th>Orders</th>
                  <th>Revenue</th>
                </tr>
              </thead>
              <tbody>
                <% @report_data[:suppliers_performance].each do |supplier| %>
                  <tr>
                    <td><%= supplier[:supplier_name] %></td>
                    <td><%= supplier[:orders_count] %></td>
                    <td>â‚¹<%= number_with_delimiter(supplier[:revenue]) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="alert alert-info">
      <i class="fas fa-info-circle me-2"></i>
      No suppliers data available for the selected date range.
    </div>
  <% end %>
</div>

