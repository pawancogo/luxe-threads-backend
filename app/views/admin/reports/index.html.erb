<% content_for :title, "Reports & Analytics" %>

<div class="admin-card">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="card-title mb-0">
      <i class="fas fa-chart-bar me-2"></i>Reports & Analytics
    </h1>
  </div>
  
  <!-- Date Range Filter -->
  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0">Date Range</h5>
    </div>
    <div class="card-body">
      <%= form_with url: admin_reports_path, method: :get, local: true, class: "row g-3" do |f| %>
        <div class="col-md-4">
          <%= f.label :start_date, "Start Date", class: "form-label" %>
          <%= f.date_field :start_date, value: @start_date, class: "form-control" %>
        </div>
        <div class="col-md-4">
          <%= f.label :end_date, "End Date", class: "form-label" %>
          <%= f.date_field :end_date, value: @end_date, class: "form-control" %>
        </div>
        <div class="col-md-4">
          <label class="form-label">&nbsp;</label>
          <div>
            <%= f.submit "Apply", class: "btn btn-primary" %>
            <%= link_to "Last 7 Days", admin_reports_path(start_date: 7.days.ago.to_date, end_date: Date.current), class: "btn btn-outline-secondary btn-sm" %>
            <%= link_to "Last 30 Days", admin_reports_path(start_date: 30.days.ago.to_date, end_date: Date.current), class: "btn btn-outline-secondary btn-sm" %>
            <%= link_to "Last 90 Days", admin_reports_path(start_date: 90.days.ago.to_date, end_date: Date.current), class: "btn btn-outline-secondary btn-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  
  <!-- Report Navigation -->
  <div class="row g-4">
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body text-center">
          <i class="fas fa-chart-line fa-3x text-primary mb-3"></i>
          <h5 class="card-title">Sales Report</h5>
          <p class="text-muted">Revenue, orders, and sales trends</p>
          <%= link_to "View Sales Report", admin_reports_sales_path(start_date: @start_date, end_date: @end_date), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body text-center">
          <i class="fas fa-box fa-3x text-info mb-3"></i>
          <h5 class="card-title">Products Report</h5>
          <p class="text-muted">Product statistics and performance</p>
          <%= link_to "View Products Report", admin_reports_products_path(start_date: @start_date, end_date: @end_date), class: "btn btn-info" %>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body text-center">
          <i class="fas fa-users fa-3x text-success mb-3"></i>
          <h5 class="card-title">Users Report</h5>
          <p class="text-muted">User growth and activity</p>
          <%= link_to "View Users Report", admin_reports_users_path(start_date: @start_date, end_date: @end_date), class: "btn btn-success" %>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body text-center">
          <i class="fas fa-store fa-3x text-warning mb-3"></i>
          <h5 class="card-title">Suppliers Report</h5>
          <p class="text-muted">Supplier performance and stats</p>
          <%= link_to "View Suppliers Report", admin_reports_suppliers_path(start_date: @start_date, end_date: @end_date), class: "btn btn-warning" %>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body text-center">
          <i class="fas fa-dollar-sign fa-3x text-success mb-3"></i>
          <h5 class="card-title">Revenue Report</h5>
          <p class="text-muted">Revenue breakdown and trends</p>
          <%= link_to "View Revenue Report", admin_reports_revenue_path(start_date: @start_date, end_date: @end_date), class: "btn btn-success" %>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body text-center">
          <i class="fas fa-undo fa-3x text-danger mb-3"></i>
          <h5 class="card-title">Returns Report</h5>
          <p class="text-muted">Return requests and refunds</p>
          <%= link_to "View Returns Report", admin_reports_returns_path(start_date: @start_date, end_date: @end_date), class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>

