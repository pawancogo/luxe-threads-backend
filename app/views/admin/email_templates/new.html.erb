<% content_for :title, "New Email Template" %>

<div class="admin-card">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="card-title mb-0">
      <i class="fas fa-plus me-2"></i>Create New Email Template
    </h1>
    <%= link_to "Back to Templates", admin_email_templates_path, class: "btn btn-outline-secondary" %>
  </div>
  
  <%= form_with model: [:admin, @template], local: true do |f| %>
    <% if @template.errors.any? %>
      <div class="alert alert-danger">
        <h5>Please fix the following errors:</h5>
        <ul class="mb-0">
          <% @template.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="mb-3">
      <%= f.label :template_type, class: "form-label" %>
      <%= f.select :template_type, 
          EmailTemplate::TEMPLATE_TYPES.map { |type| [type.humanize.gsub('_', ' '), type] },
          {}, { class: "form-select", required: true } %>
      <small class="form-text text-muted">Select the type of email template</small>
    </div>
    
    <div class="mb-3">
      <%= f.label :subject, class: "form-label" %>
      <%= f.text_field :subject, class: "form-control", required: true, 
          placeholder: "Welcome to LuxeThreads!" %>
      <small class="form-text text-muted">Use {{variable_name}} for dynamic content</small>
    </div>
    
    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :from_email, "From Email", class: "form-label" %>
          <%= f.email_field :from_email, class: "form-control", 
              placeholder: "noreply@luxethreads.com" %>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :from_name, "From Name", class: "form-label" %>
          <%= f.text_field :from_name, class: "form-control", 
              placeholder: "LuxeThreads" %>
        </div>
      </div>
    </div>
    
    <div class="mb-3">
      <%= f.label :body_html, "HTML Body", class: "form-label" %>
      <%= f.text_area :body_html, rows: 15, class: "form-control font-mono", 
          placeholder: '<html><body><h1>Hello {{user_name}}!</h1></body></html>' %>
      <small class="form-text text-muted">Use {{variable_name}} syntax for dynamic content</small>
    </div>
    
    <div class="mb-3">
      <%= f.label :body_text, "Plain Text Body", class: "form-label" %>
      <%= f.text_area :body_text, rows: 10, class: "form-control font-mono",
          placeholder: "Hello {{user_name}}!" %>
      <small class="form-text text-muted">Plain text version of the email</small>
    </div>
    
    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, rows: 3, class: "form-control" %>
      <small class="form-text text-muted">Description and usage notes for this template</small>
    </div>
    
    <div class="mb-3">
      <div class="form-check">
        <%= f.check_box :is_active, class: "form-check-input", checked: true %>
        <%= f.label :is_active, "Active", class: "form-check-label" %>
      </div>
    </div>
    
    <div class="d-flex gap-2">
      <%= f.submit "Create Template", class: "btn btn-primary" %>
      <%= link_to "Cancel", admin_email_templates_path, class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>

