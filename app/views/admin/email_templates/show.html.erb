<% content_for :title, "Email Template - #{@template.template_type.humanize}" %>

<div class="admin-card mb-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="card-title mb-0">
      <i class="fas fa-envelope me-2"></i>Email Template: <%= @template.template_type.humanize.gsub('_', ' ') %>
    </h1>
    <div>
      <%= link_to "Back to Templates", admin_email_templates_path, class: "btn btn-outline-secondary" %>
      <%= link_to "Edit", edit_admin_email_template_path(@template), class: "btn btn-primary" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">Template Details</h5>
        </div>
        <div class="card-body">
          <table class="table table-bordered">
            <tr>
              <th width="30%">Template Type</th>
              <td><%= @template.template_type.humanize.gsub('_', ' ') %></td>
            </tr>
            <tr>
              <th>Subject</th>
              <td><%= @template.subject %></td>
            </tr>
            <tr>
              <th>From Email</th>
              <td><%= @template.from_email || 'N/A' %></td>
            </tr>
            <tr>
              <th>From Name</th>
              <td><%= @template.from_name || 'N/A' %></td>
            </tr>
            <tr>
              <th>Status</th>
              <td>
                <% if @template.is_active? %>
                  <span class="badge bg-success">Active</span>
                <% else %>
                  <span class="badge bg-secondary">Inactive</span>
                <% end %>
              </td>
            </tr>
            <tr>
              <th>Description</th>
              <td><%= @template.description || 'N/A' %></td>
            </tr>
            <tr>
              <th>Created At</th>
              <td><%= @template.created_at.strftime('%B %d, %Y at %I:%M %p') %></td>
            </tr>
          </table>
        </div>
      </div>
      
      <!-- HTML Body -->
      <% if @template.body_html.present? %>
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">HTML Body</h5>
          </div>
          <div class="card-body">
            <pre class="bg-light p-3 rounded" style="max-height: 400px; overflow-y: auto;"><%= @template.body_html %></pre>
          </div>
        </div>
      <% end %>
      
      <!-- Text Body -->
      <% if @template.body_text.present? %>
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">Plain Text Body</h5>
          </div>
          <div class="card-body">
            <pre class="bg-light p-3 rounded" style="max-height: 400px; overflow-y: auto;"><%= @template.body_text %></pre>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Actions</h5>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <%= link_to "Edit Template", edit_admin_email_template_path(@template), class: "btn btn-primary" %>
            <%= form_with url: preview_admin_email_template_path(@template), method: :post, local: true, class: "mb-2" do |f| %>
              <%= f.submit "Preview Email", class: "btn btn-success w-100" %>
            <% end %>
            <%= link_to "Delete Template", admin_email_template_path(@template), method: :delete, 
                        class: "btn btn-outline-danger",
                        data: { confirm: "Are you sure? This action cannot be undone." } %>
            <%= link_to "View in RailsAdmin", rails_admin_path, class: "btn btn-outline-secondary", target: "_blank" %>
          </div>
        </div>
      </div>
      
      <!-- Available Variables -->
      <% if @template.variables.present? && @template.variables.any? %>
        <div class="card mt-3">
          <div class="card-header">
            <h5 class="mb-0">Available Variables</h5>
          </div>
          <div class="card-body">
            <small class="text-muted">Use these variables in your template with {{variable_name}} syntax:</small>
            <ul class="list-unstyled mt-2">
              <% @template.variables.each do |key, value| %>
                <li><code>{{<%= key %>}}</code></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

