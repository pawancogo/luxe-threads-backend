<% content_for :title, "Email Preview - #{@template.template_type.humanize}" %>

<div class="admin-card">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="card-title mb-0">
      <i class="fas fa-eye me-2"></i>Email Preview
    </h1>
    <%= link_to "Back to Template", admin_email_template_path(@template), class: "btn btn-outline-secondary" %>
  </div>
  
  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">From</h5>
        </div>
        <div class="card-body">
          <p class="mb-0">
            <%= @preview[:from_name] || @preview[:from_email] || 'N/A' %>
            <% if @preview[:from_email] %>
              &lt;<%= @preview[:from_email] %>&gt;
            <% end %>
          </p>
        </div>
      </div>
      
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">Subject</h5>
        </div>
        <div class="card-body">
          <p class="mb-0 font-weight-bold"><%= @preview[:subject] %></p>
        </div>
      </div>
      
      <% if @preview[:body_html].present? %>
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">HTML Body Preview</h5>
          </div>
          <div class="card-body">
            <div class="border rounded p-4" style="background: white;">
              <%= raw @preview[:body_html] %>
            </div>
          </div>
        </div>
      <% end %>
      
      <% if @preview[:body_text].present? %>
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">Plain Text Body Preview</h5>
          </div>
          <div class="card-body">
            <pre class="bg-light p-3 rounded" style="white-space: pre-wrap;"><%= @preview[:body_text] %></pre>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Preview Variables</h5>
        </div>
        <div class="card-body">
          <p class="small text-muted">You can customize the preview by providing test variables:</p>
          <%= form_with url: preview_admin_email_template_path(@template), method: :post, local: true do |f| %>
            <div class="mb-2">
              <%= f.text_field "variables[user_name]", placeholder: "User Name", class: "form-control form-control-sm" %>
            </div>
            <div class="mb-2">
              <%= f.text_field "variables[order_number]", placeholder: "Order Number", class: "form-control form-control-sm" %>
            </div>
            <div class="mb-2">
              <%= f.text_field "variables[amount]", placeholder: "Amount", class: "form-control form-control-sm" %>
            </div>
            <%= f.submit "Update Preview", class: "btn btn-sm btn-primary w-100" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

