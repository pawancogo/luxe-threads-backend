<% content_for :title, "New Setting" %>

<div class="admin-card">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="card-title mb-0">
      <i class="fas fa-plus me-2"></i>Create New Setting
    </h1>
    <%= link_to "Back to Settings", admin_settings_path, class: "btn btn-outline-secondary" %>
  </div>
  
  <%= form_with model: [:admin, @setting], local: true do |f| %>
    <% if @setting.errors.any? %>
      <div class="alert alert-danger">
        <h5>Please fix the following errors:</h5>
        <ul class="mb-0">
          <% @setting.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="mb-3">
      <%= f.label :key, class: "form-label" %>
      <%= f.text_field :key, class: "form-control", required: true, placeholder: "site_name" %>
      <small class="form-text text-muted">Use lowercase with underscores (e.g., site_name, max_order_amount)</small>
    </div>
    
    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :category, class: "form-label" %>
          <%= f.select :category, 
              [['General', 'general'], ['Payment', 'payment'], ['Shipping', 'shipping'], 
               ['Email', 'email'], ['Feature Flags', 'feature_flags']],
              {}, { class: "form-select", required: true } %>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :value_type, class: "form-label" %>
          <%= f.select :value_type, 
              [['String', 'string'], ['Integer', 'integer'], ['Float', 'float'], 
               ['Boolean', 'boolean'], ['JSON', 'json']],
              {}, { class: "form-select", required: true, id: "value_type_select" } %>
        </div>
      </div>
    </div>
    
    <div class="mb-3">
      <%= f.label :value, class: "form-label" %>
      <div id="value-input-container">
        <%= f.text_field :value, class: "form-control", required: true %>
      </div>
      <small class="form-text text-muted">
        <span id="value-hint">Enter the setting value</span>
      </small>
    </div>
    
    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, rows: 3, class: "form-control" %>
    </div>
    
    <div class="mb-3">
      <div class="form-check">
        <%= f.check_box :is_public, class: "form-check-input" %>
        <%= f.label :is_public, "Public (exposed to frontend)", class: "form-check-label" %>
        <small class="form-text text-muted d-block">Public settings can be accessed by frontend applications</small>
      </div>
    </div>
    
    <div class="d-flex gap-2">
      <%= f.submit "Create Setting", class: "btn btn-primary" %>
      <%= link_to "Cancel", admin_settings_path, class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const valueTypeSelect = document.getElementById('value_type_select');
  const valueInputContainer = document.getElementById('value-input-container');
  const valueHint = document.getElementById('value-hint');
  
  if (valueTypeSelect) {
    function updateValueInput() {
      const valueType = valueTypeSelect.value;
      const currentValue = valueInputContainer.querySelector('input').value;
      
      let input;
      if (valueType === 'boolean') {
        input = document.createElement('select');
        input.className = 'form-select';
        input.name = 'setting[value]';
        input.innerHTML = '<option value="true">True</option><option value="false">False</option>';
      } else if (valueType === 'integer' || valueType === 'float') {
        input = document.createElement('input');
        input.type = 'number';
        input.step = valueType === 'float' ? '0.01' : '1';
        input.className = 'form-control';
        input.name = 'setting[value]';
        input.required = true;
      } else {
        input = document.createElement('input');
        input.type = valueType === 'json' ? 'text' : 'text';
        input.className = 'form-control';
        input.name = 'setting[value]';
        input.required = true;
      }
      
      valueInputContainer.innerHTML = '';
      valueInputContainer.appendChild(input);
      
      // Update hint
      const hints = {
        'string': 'Enter text value',
        'integer': 'Enter whole number',
        'float': 'Enter decimal number',
        'boolean': 'Select true or false',
        'json': 'Enter JSON format (e.g., {"key": "value"})'
      };
      valueHint.textContent = hints[valueType] || 'Enter the setting value';
    }
    
    valueTypeSelect.addEventListener('change', updateValueInput);
    updateValueInput();
  }
});
</script>

