<% content_for :title, "Edit Setting - #{@setting.key}" %>

<div class="admin-card">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="card-title mb-0">
      <i class="fas fa-edit me-2"></i>Edit Setting
    </h1>
    <%= link_to "Back", admin_setting_path(@setting), class: "btn btn-outline-secondary" %>
  </div>
  
  <%= form_with model: [:admin, @setting], local: true do |f| %>
    <% if @setting.errors.any? %>
      <div class="alert alert-danger">
        <h5>Please fix the following errors:</h5>
        <ul class="mb-0">
          <% @setting.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="mb-3">
      <%= f.label :key, class: "form-label" %>
      <%= f.text_field :key, class: "form-control", disabled: true %>
      <small class="form-text text-muted">Key cannot be changed after creation</small>
    </div>
    
    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :category, class: "form-label" %>
          <%= f.select :category, 
              [['General', 'general'], ['Payment', 'payment'], ['Shipping', 'shipping'], 
               ['Email', 'email'], ['Feature Flags', 'feature_flags']],
              {}, { class: "form-select" } %>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :value_type, class: "form-label" %>
          <%= f.select :value_type, 
              [['String', 'string'], ['Integer', 'integer'], ['Float', 'float'], 
               ['Boolean', 'boolean'], ['JSON', 'json']],
              {}, { class: "form-select", id: "value_type_select" } %>
        </div>
      </div>
    </div>
    
    <div class="mb-3">
      <%= f.label :value, class: "form-label" %>
      <% if @setting.value_type == 'boolean' %>
        <%= f.select :value, [['True', 'true'], ['False', 'false']], 
            { selected: @setting.value }, { class: "form-select" } %>
      <% elsif @setting.value_type == 'integer' %>
        <%= f.number_field :value, step: 1, class: "form-control" %>
      <% elsif @setting.value_type == 'float' %>
        <%= f.number_field :value, step: 0.01, class: "form-control" %>
      <% else %>
        <%= f.text_area :value, rows: @setting.value_type == 'json' ? 5 : 3, class: "form-control" %>
      <% end %>
    </div>
    
    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, rows: 3, class: "form-control" %>
    </div>
    
    <div class="mb-3">
      <div class="form-check">
        <%= f.check_box :is_public, class: "form-check-input" %>
        <%= f.label :is_public, "Public (exposed to frontend)", class: "form-check-label" %>
      </div>
    </div>
    
    <div class="d-flex gap-2">
      <%= f.submit "Update Setting", class: "btn btn-primary" %>
      <%= link_to "Cancel", admin_setting_path(@setting), class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>

