<%= form_with(model: [:admin, supplier], local: true, class: "supplier-form") do |form| %>
  <% if supplier.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(supplier.errors.count, "error") %> prohibited this supplier from being saved:</h4>
      <ul>
        <% supplier.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-section">
    <h3>Supplier Information</h3>
    
    <div class="form-group">
      <%= form.label :first_name, class: "form-label" %>
      <%= form.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :last_name, class: "form-label" %>
      <%= form.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :phone_number, class: "form-label" %>
      <%= form.text_field :phone_number, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :role, class: "form-label" %>
      <%= form.select :role, 
          options_for_select([
            ['Basic Supplier', 'basic_supplier'],
            ['Verified Supplier', 'verified_supplier'],
            ['Premium Supplier', 'premium_supplier'],
            ['Partner Supplier', 'partner_supplier']
          ], supplier.role), 
          { prompt: 'Select a role' }, 
          { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, class: "form-label" %>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <div class="form-section">
    <h3>Company Information</h3>
    
    <%= form.fields_for :supplier_profile_attributes do |profile_form| %>
      <div class="form-group">
        <%= profile_form.label :company_name, class: "form-label" %>
        <%= profile_form.text_field :company_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= profile_form.label :gst_number, class: "form-label" %>
        <%= profile_form.text_field :gst_number, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= profile_form.label :description, class: "form-label" %>
        <%= profile_form.text_area :description, class: "form-control", rows: 3 %>
      </div>

      <div class="form-group">
        <%= profile_form.label :website_url, class: "form-label" %>
        <%= profile_form.url_field :website_url, class: "form-control" %>
      </div>

      <div class="form-group">
        <div class="checkbox-group">
          <%= profile_form.check_box :verified, class: "form-checkbox" %>
          <%= profile_form.label :verified, "Verified Supplier", class: "form-label" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="form-actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_suppliers_path, class: "btn btn-secondary" %>
  </div>
<% end %>
