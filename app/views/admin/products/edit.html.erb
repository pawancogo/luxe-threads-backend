<% content_for :title, "Edit Product - #{@product.name}" %>

<div class="admin-card">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="card-title mb-0">
      <i class="fas fa-edit me-2"></i>Edit Product
    </h1>
    <%= link_to "Back", admin_product_path(@product), class: "btn btn-outline-secondary" %>
  </div>
  
  <%= form_with model: [:admin, @product], local: true do |f| %>
    <% if @product.errors.any? %>
      <div class="alert alert-danger">
        <h5>Please fix the following errors:</h5>
        <ul class="mb-0">
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :status, class: "form-label" %>
          <%= f.select :status, 
              [['Pending', 'pending'], ['Active', 'active'], ['Rejected', 'rejected'], ['Archived', 'archived']],
              {}, { class: "form-select" } %>
        </div>
      </div>
    </div>
    
    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, rows: 5, class: "form-control" %>
    </div>
    
    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <div class="form-check">
            <%= f.check_box :is_featured, class: "form-check-input" %>
            <%= f.label :is_featured, "Featured Product", class: "form-check-label" %>
          </div>
        </div>
      </div>
    </div>
    
    <% if @product.status == 'rejected' || params[:show_rejection] %>
      <div class="mb-3">
        <%= f.label :rejection_reason, "Rejection Reason", class: "form-label" %>
        <%= f.text_area :rejection_reason, rows: 3, class: "form-control" %>
        <small class="form-text text-muted">Explain why this product was rejected</small>
      </div>
    <% end %>
    
    <div class="d-flex gap-2">
      <%= f.submit "Update Product", class: "btn btn-primary" %>
      <%= link_to "Cancel", admin_product_path(@product), class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>

