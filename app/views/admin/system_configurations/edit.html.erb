<% content_for :title, "Edit System Configuration - #{@system_configuration.key}" %>

<div class="admin-card">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="card-title mb-0">
      <i class="fas fa-edit me-2"></i>Edit System Configuration
    </h1>
    <%= link_to "Back", admin_system_configuration_path(@system_configuration), class: "btn btn-outline-secondary" %>
  </div>
  
  <%= form_with model: [:admin, @system_configuration], local: true do |f| %>
    <% if @system_configuration.errors.any? %>
      <div class="alert alert-danger">
        <h5>Please fix the following errors:</h5>
        <ul class="mb-0">
          <% @system_configuration.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="mb-3">
      <%= f.label :key, class: "form-label" %>
      <%= f.text_field :key, class: "form-control", disabled: true %>
      <small class="form-text text-muted">Key cannot be changed after creation</small>
    </div>
    
    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :category, class: "form-label" %>
          <%= f.select :category, 
              [['General', 'general'], ['Payment', 'payment'], ['Shipping', 'shipping'], 
               ['Email', 'email'], ['API', 'api'], ['Feature Flags', 'feature_flags']],
              {}, { class: "form-select" } %>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :value_type, class: "form-label" %>
          <%= f.select :value_type, 
              [['String', 'string'], ['Integer', 'integer'], ['Float', 'float'], 
               ['Boolean', 'boolean'], ['JSON', 'json']],
              {}, { class: "form-select", id: "value_type_select" } %>
        </div>
      </div>
    </div>
    
    <div class="mb-3">
      <%= f.label :value, class: "form-label" %>
      <% if @system_configuration.value_type == 'boolean' %>
        <%= f.select :value, [['True', 'true'], ['False', 'false']], 
            { selected: @system_configuration.value }, { class: "form-select" } %>
      <% elsif @system_configuration.value_type == 'integer' %>
        <%= f.number_field :value, step: 1, class: "form-control" %>
      <% elsif @system_configuration.value_type == 'float' %>
        <%= f.number_field :value, step: 0.01, class: "form-control" %>
      <% elsif @system_configuration.value_type == 'json' %>
        <%= f.text_area :value, rows: 5, class: "form-control", placeholder: '{"key": "value"}' %>
      <% else %>
        <%= f.text_area :value, rows: 3, class: "form-control" %>
      <% end %>
    </div>
    
    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, rows: 3, class: "form-control" %>
    </div>
    
    <div class="mb-3">
      <div class="form-check">
        <%= f.check_box :is_active, class: "form-check-input" %>
        <%= f.label :is_active, "Active", class: "form-check-label" %>
        <small class="form-text text-muted d-block">Active configurations are available for use in the application</small>
      </div>
    </div>
    
    <div class="alert alert-info">
      <i class="fas fa-info-circle me-2"></i>
      <strong>Created by:</strong> 
      <%= @system_configuration.created_by ? "#{@system_configuration.creator_name} (#{@system_configuration.created_by_type})" : 'System' %>
      on <%= @system_configuration.created_at.strftime('%B %d, %Y at %I:%M %p') %>
    </div>
    
    <div class="d-flex gap-2">
      <%= f.submit "Update Configuration", class: "btn btn-primary" %>
      <%= link_to "Cancel", admin_system_configuration_path(@system_configuration), class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>


