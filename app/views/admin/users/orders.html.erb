<% content_for :title, "Orders - #{@user.email}" %>

<div class="admin-card">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="card-title mb-0">
      <i class="fas fa-shopping-cart me-2"></i>Orders for <%= @user.email %>
    </h1>
    <%= link_to "Back to User", admin_user_path(@user), class: "btn btn-outline-secondary" %>
  </div>
  
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Order #</th>
          <th>Amount</th>
          <th>Status</th>
          <th>Payment Status</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if @orders.any? %>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.order_number, admin_order_path(order), class: "text-decoration-none" %></td>
              <td>â‚¹<%= number_with_delimiter(order.total_amount) %></td>
              <td>
                <span class="badge bg-<%= case order.status
                  when 'pending' then 'warning'
                  when 'paid', 'shipped' then 'info'
                  when 'delivered' then 'success'
                  when 'cancelled' then 'danger'
                  else 'secondary'
                  end %>">
                  <%= order.status %>
                </span>
              </td>
              <td>
                <span class="badge bg-<%= order.payment_status == 'payment_complete' ? 'success' : 'warning' %>">
                  <%= order.payment_status&.gsub('payment_', '') || 'N/A' %>
                </span>
              </td>
              <td><%= order.created_at.strftime('%b %d, %Y') %></td>
              <td>
                <%= link_to admin_order_path(order), class: "btn btn-sm btn-outline-primary" do %>
                  <i class="fas fa-eye"></i> View
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6" class="text-center text-muted py-4">No orders found for this user</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <!-- Pagination -->
  <% if @orders.respond_to?(:current_page) %>
    <div class="d-flex justify-content-center mt-4">
      <%= paginate @orders if defined?(Kaminari) %>
    </div>
  <% end %>
</div>

