<% content_for :title, "Activity - #{@user.email}" %>

<div class="admin-card">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="card-title mb-0">
      <i class="fas fa-history me-2"></i>Activity for <%= @user.email %>
    </h1>
    <%= link_to "Back to User", admin_user_path(@user), class: "btn btn-outline-secondary" %>
  </div>
  
  <div class="alert alert-info">
    <i class="fas fa-info-circle me-2"></i>
    User activity log will be displayed here. This feature can be enhanced with AdminActivity tracking.
  </div>
  
  <div class="card">
    <div class="card-body">
      <p class="text-muted">Activity tracking for users is available through the AdminActivity model and can be integrated here.</p>
    </div>
  </div>
</div>

