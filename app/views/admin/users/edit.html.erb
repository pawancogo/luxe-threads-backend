<% content_for :title, "Edit User - #{@user.email}" %>

<div class="admin-card">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="card-title mb-0">
      <i class="fas fa-edit me-2"></i>Edit User
    </h1>
    <%= link_to "Back", admin_user_path(@user), class: "btn btn-outline-secondary" %>
  </div>
  
  <%= form_with model: [:admin, @user], local: true do |f| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <h5>Please fix the following errors:</h5>
        <ul class="mb-0">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :first_name, class: "form-label" %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :last_name, class: "form-label" %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>
    </div>
    
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    
    <div class="mb-3">
      <%= f.label :phone_number, class: "form-label" %>
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>
    
    <div class="mb-3">
      <div class="form-check">
        <%= f.check_box :is_active, class: "form-check-input" %>
        <%= f.label :is_active, "Active", class: "form-check-label" %>
      </div>
    </div>
    
    <div class="d-flex gap-2">
      <%= f.submit "Update User", class: "btn btn-primary" %>
      <%= link_to "Cancel", admin_user_path(@user), class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>

