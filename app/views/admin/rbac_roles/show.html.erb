<% content_for :title, "Role: #{@role.name}" %>

<div class="admin-card">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="card-title mb-0">
        <i class="fas fa-shield-alt me-2"></i><%= @role.name %>
      </h1>
      <p class="text-muted mb-0 mt-2">Role Details & Permissions</p>
    </div>
    <div>
      <%= link_to edit_admin_rbac_role_path(@role), class: "btn btn-primary me-2" do %>
        <i class="fas fa-edit me-2"></i>Edit Permissions
      <% end %>
      <%= link_to admin_rbac_roles_path, class: "btn btn-outline-secondary" do %>
        <i class="fas fa-arrow-left me-2"></i>Back to Roles
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <!-- Role Information -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">Role Information</h5>
        </div>
        <div class="card-body">
          <dl class="row mb-0">
            <dt class="col-sm-4">Name:</dt>
            <dd class="col-sm-8"><%= @role.name %></dd>
            
            <dt class="col-sm-4">Slug:</dt>
            <dd class="col-sm-8"><code><%= @role.slug %></code></dd>
            
            <dt class="col-sm-4">Type:</dt>
            <dd class="col-sm-8">
              <span class="badge bg-info"><%= @role.role_type.humanize %></span>
            </dd>
            
            <dt class="col-sm-4">Priority:</dt>
            <dd class="col-sm-8"><%= @role.priority %></dd>
            
            <dt class="col-sm-4">Status:</dt>
            <dd class="col-sm-8">
              <% if @role.is_active %>
                <span class="badge bg-success">Active</span>
              <% else %>
                <span class="badge bg-secondary">Inactive</span>
              <% end %>
              <% if @role.is_system %>
                <span class="badge bg-info ms-2">System Role</span>
              <% end %>
            </dd>
            
            <% if @role.description.present? %>
              <dt class="col-sm-4">Description:</dt>
              <dd class="col-sm-8"><%= @role.description %></dd>
            <% end %>
          </dl>
        </div>
      </div>

      <!-- Permissions -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-key me-2"></i>Permissions
            <span class="badge bg-primary ms-2"><%= @permissions.count %></span>
          </h5>
        </div>
        <div class="card-body">
          <% if @permissions_by_category.any? %>
            <% @permissions_by_category.each do |category, perms| %>
              <div class="mb-4">
                <h6 class="text-primary mb-3">
                  <i class="fas fa-folder me-2"></i><%= category.present? ? category : 'Uncategorized' %>
                  <span class="badge bg-secondary ms-2"><%= perms.count %></span>
                </h6>
                <div class="row">
                  <% perms.each do |perm| %>
                    <div class="col-md-6 mb-2">
                      <div class="d-flex align-items-center p-2 border rounded">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        <div class="flex-grow-1">
                          <strong class="small"><%= perm.name %></strong>
                          <br>
                          <code class="small text-muted"><%= perm.slug %></code>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="alert alert-warning">
              <i class="fas fa-exclamation-triangle me-2"></i>This role has no permissions assigned.
              <%= link_to "Assign permissions", edit_admin_rbac_role_path(@role), class: "alert-link" %>.
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <!-- Assigned Admins -->
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-users me-2"></i>Assigned Admins
            <span class="badge bg-info ms-2"><%= Admin.where(id: @role.admin_ids).where(is_active: true).distinct.count %></span>
          </h5>
        </div>
        <div class="card-body">
          <% if @assigned_admins.any? %>
            <ul class="list-unstyled mb-0">
              <% @assigned_admins.each do |admin| %>
                <li class="mb-2 pb-2 border-bottom">
                  <div class="d-flex align-items-center">
                    <div class="avatar-circle bg-primary text-white me-2" style="width: 32px; height: 32px; font-size: 12px;">
                      <%= admin.first_name&.first&.upcase || admin.email.first.upcase %>
                    </div>
                    <div class="flex-grow-1">
                      <strong class="small d-block"><%= admin.full_name %></strong>
                      <small class="text-muted"><%= admin.email %></small>
                    </div>
                    <%= link_to admin_admin_path(admin), class: "btn btn-sm btn-outline-primary", title: "View Admin" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                  </div>
                </li>
              <% end %>
            </ul>
            <% if Admin.where(id: @role.admin_ids).where(is_active: true).distinct.count > 10 %>
              <div class="mt-3 text-center">
                <%= link_to admin_admins_path(role: @role.slug), class: "btn btn-sm btn-outline-secondary" do %>
                  View All <%= Admin.where(id: @role.admin_ids).where(is_active: true).distinct.count %> Admins
                <% end %>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted mb-0">No admins assigned to this role.</p>
            <div class="mt-3">
              <%= link_to admin_admins_path, class: "btn btn-sm btn-primary" do %>
                <i class="fas fa-user-plus me-1"></i>Assign to Admin
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Quick Actions -->
      <div class="card mt-4">
        <div class="card-header">
          <h5 class="mb-0">Quick Actions</h5>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <%= link_to edit_admin_rbac_role_path(@role), class: "btn btn-primary btn-sm" do %>
              <i class="fas fa-edit me-2"></i>Edit Permissions
            <% end %>
            <%= link_to admin_admins_path, class: "btn btn-outline-secondary btn-sm" do %>
              <i class="fas fa-users me-2"></i>Manage Admins
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

