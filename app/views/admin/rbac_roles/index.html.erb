<% content_for :title, "Roles & Permissions Management" %>

<div class="admin-card">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="card-title mb-0">
        <i class="fas fa-user-lock me-2"></i>Roles & Permissions
      </h1>
      <p class="text-muted mb-0 mt-2">Manage roles and their permissions. Assign roles to admins to control access.</p>
    </div>
  </div>

  <% if @roles_by_type.any? %>
    <% @roles_by_type.each do |role_type, roles| %>
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">
            <%= role_type.humanize %> Roles
            <span class="badge bg-secondary ms-2"><%= roles.count %></span>
          </h5>
        </div>
        <div class="card-body">
          <div class="row">
            <% roles.each do |role| %>
              <div class="col-md-6 mb-3">
                <div class="card h-100">
                  <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                      <div>
                        <h6 class="card-title mb-1">
                          <i class="fas fa-shield-alt me-2"></i><%= role.name %>
                        </h6>
                        <small class="text-muted">
                          <code><%= role.slug %></code>
                          <% if role.is_system %>
                            <span class="badge bg-info ms-2">System</span>
                          <% end %>
                        </small>
                      </div>
                      <span class="badge bg-<%= role.is_active? ? 'success' : 'secondary' %>">
                        <%= role.is_active? ? 'Active' : 'Inactive' %>
                      </span>
                    </div>
                    
                    <% if role.description.present? %>
                      <p class="text-muted small mb-2"><%= role.description %></p>
                    <% end %>
                    
                    <div class="mb-2">
                      <strong class="small">Permissions:</strong>
                      <span class="badge bg-primary">
                        <%= role.rbac_permissions.active.count %> permissions
                      </span>
                    </div>
                    
                    <div class="mb-2">
                      <strong class="small">Assigned to:</strong>
                      <span class="badge bg-info">
                        <%= Admin.where(id: role.admin_ids).where(is_active: true).distinct.count %> admins
                      </span>
                    </div>
                    
                    <div class="d-flex gap-2 mt-3">
                      <%= link_to admin_rbac_role_path(role), class: "btn btn-sm btn-outline-primary" do %>
                        <i class="fas fa-eye me-1"></i>View Details
                      <% end %>
                      <%= link_to edit_admin_rbac_role_path(role), class: "btn btn-sm btn-outline-secondary" do %>
                        <i class="fas fa-edit me-1"></i>Edit Permissions
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="alert alert-info">
      <i class="fas fa-info-circle me-2"></i>No roles found. Please seed the database with roles.
    </div>
  <% end %>
</div>

