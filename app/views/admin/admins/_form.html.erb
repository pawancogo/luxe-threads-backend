<%= form_with(model: [:admin, admin], local: true, class: "needs-validation", novalidate: true) do |form| %>
  <% if admin.errors.any? %>
    <div class="alert alert-danger alert-admin">
      <h5><i class="bi bi-exclamation-triangle me-2"></i><%= pluralize(admin.errors.count, "error") %> prohibited this admin from being saved:</h5>
      <ul class="mb-0">
        <% admin.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :first_name, class: "form-label" %>
        <%= form.text_field :first_name, class: "form-control form-admin", required: true %>
        <div class="invalid-feedback">
          Please provide a valid first name.
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :last_name, class: "form-label" %>
        <%= form.text_field :last_name, class: "form-control form-admin", required: true %>
        <div class="invalid-feedback">
          Please provide a valid last name.
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-control form-admin", required: true %>
        <div class="invalid-feedback">
          Please provide a valid email address.
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :phone_number, class: "form-label" %>
        <%= form.text_field :phone_number, class: "form-control form-admin", required: true %>
        <div class="invalid-feedback">
          Please provide a valid phone number.
        </div>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :role, class: "form-label" %>
    <%= form.select :role, 
        options_for_select([
          ['Super Admin', 'super_admin'],
          ['Product Admin', 'product_admin'],
          ['Order Admin', 'order_admin'],
          ['User Admin', 'user_admin'],
          ['Supplier Admin', 'supplier_admin']
        ], admin.role), 
        { prompt: 'Select a role' }, 
        { class: "form-select form-admin", required: true } %>
    <div class="invalid-feedback">
      Please select a role.
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control form-admin", required: admin.new_record? %>
        <div class="invalid-feedback">
          Please provide a password.
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :password_confirmation, class: "form-label" %>
        <%= form.password_field :password_confirmation, class: "form-control form-admin", required: admin.new_record? %>
        <div class="invalid-feedback">
          Please confirm your password.
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit class: "btn btn-admin" %>
    <%= link_to "Cancel", admin_admins_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
