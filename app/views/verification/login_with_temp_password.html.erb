<div class="login-container">
  <div class="container-fluid">
    <div class="row justify-content-center min-vh-100 align-items-center">
      <div class="col-11 col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <div class="card">
          <div class="card-header text-white text-center">
            <h3 class="mb-2">
              <i class="fas fa-shield-alt me-2"></i>
              LuxeThreads Admin
            </h3>
            <h5 class="mb-0 opacity-75">Login with Temporary Password</h5>
          </div>
          <div class="card-body">
          <% 
            login_with_temp_password_path = case @user_type
            when 'admin'
              admin_auth_login_with_temp_password_path
            when 'supplier'
              admin_auth_login_with_temp_password_path(user_type: 'supplier')
            else
              admin_auth_login_with_temp_password_path(user_type: 'user')
            end
            
            login_path = case @user_type
            when 'admin'
              admin_login_path
            when 'supplier'
              admin_login_path
            else
              admin_login_path
            end
          %>
            <%= form_with(url: login_with_temp_password_path, method: :post, local: true, class: "needs-validation", novalidate: true) do |form| %>
              <%= hidden_field_tag :user_type, @user_type %>
              <div class="mb-4">
                <%= form.label :email, "Email Address", class: "form-label" %>
                <div class="input-group">
                  <span class="input-group-text bg-light border-end-0">
                    <i class="fas fa-envelope text-muted"></i>
                  </span>
                  <%= form.email_field :email, class: "form-control border-start-0", placeholder: "Enter your email", required: true %>
                </div>
                <div class="invalid-feedback">
                  Please provide a valid email address.
                </div>
              </div>
              
              <div class="mb-4">
                <%= form.label :temp_password, "Temporary Password", class: "form-label" %>
                <div class="input-group">
                  <span class="input-group-text bg-light border-end-0">
                    <i class="fas fa-key text-muted"></i>
                  </span>
                  <%= form.password_field :temp_password, id: "login-temp-password", class: "form-control border-start-0", placeholder: "Enter temporary password", required: true %>
                  <button type="button" class="btn btn-outline-secondary border-start-0" id="login-temp-password-toggle" onclick="togglePassword('login-temp-password', 'login-temp-password-toggle')">
                    <i class="fas fa-eye"></i>
                  </button>
                </div>
                <div class="invalid-feedback">
                  Please provide your temporary password.
                </div>
              </div>
              
              <div class="d-grid mb-4">
                <%= form.submit "Login", class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>
            
            <div class="text-center">
              <%= link_to "Back to #{@user_type.titleize} Login", login_path, class: "text-decoration-none" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function togglePassword(fieldId, buttonId) {
    const field = document.getElementById(fieldId);
    const button = document.getElementById(buttonId);
    const icon = button?.querySelector('i');
    
    if (field) {
      if (field.type === 'password') {
        field.type = 'text';
        if (icon) {
          icon.classList.remove('fa-eye');
          icon.classList.add('fa-eye-slash');
        }
      } else {
        field.type = 'password';
        if (icon) {
          icon.classList.remove('fa-eye-slash');
          icon.classList.add('fa-eye');
        }
      }
    }
  }
</script>


