<% content_for :head do %>
  <style>
    .login-container {
      position: relative;
      z-index: 1;
      width: 100%;
    }
    
    .card {
      border: none;
      border-radius: 20px;
      box-shadow: 0 20px 40px rgba(0,0,0,0.1);
      backdrop-filter: blur(10px);
      background: rgba(255, 255, 255, 0.95);
      overflow: hidden;
    }
    
    .card-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border: none;
      padding: 2rem;
      text-align: center;
      position: relative;
    }
    
    .card-header::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, transparent 100%);
    }
    
    .card-header h3,
    .card-header h5 {
      position: relative;
      z-index: 1;
      font-weight: 600;
      margin: 0;
      color: white;
    }
    
    .card-body {
      padding: 2.5rem;
    }
    
    .form-control {
      border: 2px solid #e9ecef;
      border-radius: 12px;
      padding: 0.875rem 1rem;
      font-size: 0.95rem;
      transition: all 0.3s ease;
      background: #f8f9fa;
    }
    
    .form-control:focus {
      border-color: #667eea;
      box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
      background: white;
    }
    
    .form-label {
      font-weight: 500;
      color: #495057;
      margin-bottom: 0.5rem;
    }
    
    .btn-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border: none;
      border-radius: 12px;
      padding: 0.875rem 2rem;
      font-weight: 600;
      font-size: 1rem;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }
    
    .btn-primary::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
      transition: left 0.5s;
    }
    
    .btn-primary:hover::before {
      left: 100%;
    }
    
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
    }
    
    .btn-primary:active {
      transform: translateY(0);
    }
    
    .text-primary {
      color: #667eea !important;
    }
    
    .text-primary:hover {
      color: #764ba2 !important;
    }
    
    .input-group-text {
      background: #f8f9fa;
      border: 2px solid #e9ecef;
      border-right: none;
    }
    
    .form-control.border-start-0 {
      border-left: none;
    }
    
    @media (max-width: 768px) {
      .card-body {
        padding: 1.5rem;
      }
      
      .card-header {
        padding: 1.5rem;
      }
    }
    
    @media (max-width: 576px) {
      .card-body {
        padding: 1.25rem;
      }
      
      .card-header {
        padding: 1.25rem;
      }
    }
  </style>
<% end %>

<div class="login-container">
  <div class="container-fluid">
    <div class="row justify-content-center min-vh-100 align-items-center">
      <div class="col-11 col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <div class="card">
          <div class="card-header text-white text-center">
            <h3 class="mb-2">
              <i class="fas fa-shield-alt me-2"></i>
              LuxeThreads Admin
            </h3>
            <h5 class="mb-0 opacity-75">Forgot Password</h5>
          </div>
          <div class="card-body">
            <% 
              forgot_password_path = case @user_type
              when 'admin'
                admin_auth_forgot_password_path(user_type: 'admin')
              when 'supplier'
                admin_auth_forgot_password_path(user_type: 'supplier')
              else
                admin_auth_forgot_password_path(user_type: 'user')
              end
              
              login_path = case @user_type
              when 'admin'
                admin_login_path
              when 'supplier'
                admin_login_path
              else
                admin_login_path
              end
            %>
            <%= form_with(url: forgot_password_path, method: :post, local: true, class: "needs-validation", novalidate: true) do |form| %>
              <%= hidden_field_tag :user_type, @user_type %>
              <div class="mb-4">
                <%= form.label :email, "Email Address", class: "form-label" %>
                <div class="input-group">
                  <span class="input-group-text bg-light border-end-0">
                    <i class="fas fa-envelope text-muted"></i>
                  </span>
                  <%= form.email_field :email, class: "form-control border-start-0", placeholder: "Enter your email address", required: true %>
                </div>
                <div class="invalid-feedback">
                  Please provide a valid email address.
                </div>
              </div>
              
              <div class="d-grid mb-4">
                <%= form.submit "Send Reset Email", class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>
            
            <div class="text-center">
              <%= link_to "Back to #{@user_type.titleize} Login", login_path, class: "text-decoration-none text-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


