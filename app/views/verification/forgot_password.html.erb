<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3 class="text-center">Forgot Password</h3>
        </div>
        <div class="card-body">
          <%= form_with(url: send("#{@user_type}_forgot_password_path"), method: :post, local: true) do |form| %>
            <div class="mb-3">
              <%= form.label :email, class: "form-label" %>
              <%= form.email_field :email, class: "form-control", required: true %>
            </div>
            <div class="d-grid">
              <%= form.submit "Send Reset Email", class: "btn btn-primary" %>
            </div>
          <% end %>
          
          <div class="text-center mt-3">
            <%= link_to "Back to #{@user_type.titleize} Login", send("#{@user_type}_login_path"), class: "text-decoration-none" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


