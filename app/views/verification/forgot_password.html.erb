<div class="login-container">
  <div class="container-fluid">
    <div class="row justify-content-center min-vh-100 align-items-center">
      <div class="col-11 col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <div class="card">
          <div class="card-header text-white text-center">
            <h3 class="mb-2">
              <i class="fas fa-shield-alt me-2"></i>
              LuxeThreads Admin
            </h3>
            <h5 class="mb-0 opacity-75">Forgot Password</h5>
          </div>
          <div class="card-body">
            <% 
              forgot_password_path = case @user_type
              when 'admin'
                admin_auth_forgot_password_path
              when 'supplier'
                admin_auth_forgot_password_path(user_type: 'supplier')
              else
                admin_auth_forgot_password_path(user_type: 'user')
              end
              
              login_path = case @user_type
              when 'admin'
                admin_login_path
              when 'supplier'
                admin_login_path
              else
                admin_login_path
              end
            %>
            <%= form_with(url: forgot_password_path, method: :post, local: true, class: "needs-validation", novalidate: true) do |form| %>
              <%= hidden_field_tag :user_type, @user_type %>
              <div class="mb-4">
                <%= form.label :email, "Email Address", class: "form-label" %>
                <div class="input-group">
                  <span class="input-group-text bg-light border-end-0">
                    <i class="fas fa-envelope text-muted"></i>
                  </span>
                  <%= form.email_field :email, class: "form-control border-start-0", placeholder: "Enter your email address", required: true %>
                </div>
                <div class="invalid-feedback">
                  Please provide a valid email address.
                </div>
              </div>
              
              <div class="d-grid mb-4">
                <%= form.submit "Send Reset Email", class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>
            
            <div class="text-center">
              <%= link_to "Back to #{@user_type.titleize} Login", login_path, class: "text-decoration-none" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


